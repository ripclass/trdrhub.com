# LCopilot API Production Environment Configuration
# Copy this to .env.production and fill in your actual values

# Environment
ENVIRONMENT=production
DEBUG=false

# Database
DATABASE_URL=postgresql://username:password@host:5432/dbname

# Stub Mode - DISABLED for production
USE_STUBS=false

# AWS Services (required for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
S3_BUCKET_NAME=your-lcopilot-documents-bucket

# Google Cloud Services (required for OCR)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_DOCUMENTAI_LOCATION=us
GOOGLE_DOCUMENTAI_PROCESSOR_ID=your-processor-id

# Authentication (CHANGE THESE!)
SECRET_KEY=your-super-secure-production-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Additional Production Settings
# Add SSL redirect, rate limiting, etc. based on deployment