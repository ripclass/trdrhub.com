# ================================================================
# TRDR Hub Production Environment Template (.env.production)
# ================================================================
# Populate with deployment secrets and copy to the platform that runs
# FastAPI (Render, Docker, Kubernetes, etc.).

ENVIRONMENT=production
APP_VERSION=1.0.0
DEBUG=false

# Fully-qualified URLs
API_BASE_URL=https://api.trdrhub.com
FRONTEND_URL=https://app.trdrhub.com

# Database (Render Postgres, Supabase, RDS, etc.)
DATABASE_URL=postgresql://username:password@db-hostname:5432/lcopilot_prod

# Security
SECRET_KEY=replace-with-production-secret
JWT_SECRET_KEY=replace-with-production-jwt-secret
ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_EXPIRATION_HOURS=24

# AWS (required when USE_STUBS=false)
USE_STUBS=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
S3_BUCKET_NAME=lcopilot-prod-documents
DR_OBJECT_BACKUP_BUCKET=trdrhub-prod-backups

# Google Document AI
GOOGLE_CLOUD_PROJECT=prod-gcp-project
GOOGLE_DOCUMENTAI_LOCATION=us
GOOGLE_DOCUMENTAI_PROCESSOR_ID=processor-id
GOOGLE_APPLICATION_CREDENTIALS=/workspace/keys/google-documentai.json

# AI Providers
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
LLM_MODEL_VERSION=gpt-4o

# Billing Providers
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
SSLCOMMERZ_STORE_ID=
SSLCOMMERZ_STORE_PASSWORD=
SSLCOMMERZ_SANDBOX=false

# Observability / Monitoring
LOG_LEVEL=INFO
APP_LOG_FORMAT=json
CLOUDWATCH_NAMESPACE=lcopilot-prod
SENTRY_DSN=

# Optional Integrations
REDIS_URL=redis://redis-host:6379
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
