{
  "name": "@shared/types",
  "version": "1.0.0",
  "description": "Shared TypeScript type definitions for API contracts",
  "main": "src/api.ts",
  "types": "src/api.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "generate-python": "node scripts/generate-python-schemas.js",
    "test": "echo \"No tests for shared types\""
  },
  "files": [
    "src/**/*",
    "python/**/*"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "exports": {
    ".": {
      "import": "./src/api.ts",
      "require": "./src/api.ts"
    },
    "./python": "./python/schemas.py"
  }
}
